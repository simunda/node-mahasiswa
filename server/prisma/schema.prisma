datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Mahasiswa {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  nama      String?
  nidns     Dosen?   @relation(fields: [nidnsId], references: [id])
  nidnsId   String?
  npm       String
  updatedAt DateTime @updatedAt
}

model Dosen {
  createdAt DateTime    @default(now())
  id        String      @id @default(cuid())
  nidn      Mahasiswa[]
  updatedAt DateTime    @updatedAt
}