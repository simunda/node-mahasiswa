datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Mahasiswa {
  createdAt     DateTime @default(now())
  id            String   @id @default(cuid())
  namaMahasiswa String
  nidnDosen     Dosen[]
  npm           String   @unique
  updatedAt     DateTime @updatedAt
}

model Dosen {
  createdAt DateTime    @default(now())
  id        String      @id @default(cuid())
  mahasiswa String?
  namaDosen String?
  nidn      Mahasiswa[]
  updatedAt DateTime    @updatedAt
}